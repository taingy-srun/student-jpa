<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="StudentPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>entities.course.Course</class>
        <class>entities.course.OnCampusCourse</class>
        <class>entities.course.DistanceEducationCourse</class>
        <class>entities.Student</class>
        <class>entities.course.WebinarSessionDate</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ea544"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="123456"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>

    </persistence-unit>
</persistence>
